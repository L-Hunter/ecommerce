<h2>Welcome, <%= @user.fname %>!</h2>
<p>Display editable form information</p>

<% if current_user %>
	<%= form_tag '/sessions/destroy' do%>
	<%= submit_tag ("Log Out") %>
	<% end %>

	<h4><%= @user.fname %>
	<%= @user.lname %></h4>
	<p>Email Stuff: <%= @user.email %>
	<%= @user.password %></p>
	<p>Credit Card Info: <%= @user.ccnum %>
	<%= @user.cctype %></p>
	<p>Address: <%= @user.street %>,
	<%= @user.city %></p>
	
	<p><a href='/users/<%= "#{session[:user_id]}" %>/edit'>Edit your info</a></p>

<h3>Your Cart</h3>
<% @cart.products.each do |product| %>
	<%= product.pname %>
	<%= product.price %>
	<img src="<%= product.image %>">
<% end %>

<h3>Your Wishlist</h3>
<% @wishlist.products.each do |product| %>
	<%= product.pname %>
	<%= product.price %>
	<img src="<%= product.image %>">
<% end %>

<% end %>
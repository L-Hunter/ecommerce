<h2>Update Your Account </h2>

<%= form_for @user do |f| %>

<%= f.label :fname, "First Name: " %>
<%= f.text_field :fname %>

<%= f.label :lname, "Last Name: " %>
<%= f.text_field :lname %> <br>

<%= f.label :street, "Street Address: " %>
<%= f.text_field :street %>

<%= f.label :city, "City: " %>
<%= f.text_field :city %> <br>

<%= f.label :email, "Email: " %>
<%= f.text_field :email %>

<%= f.label :password, "Password: " %>
<%= f.text_field :password %> <br>

<%= f.label :ccnum, "Credit Card Number: " %>
<%= f.text_field :ccnum, placeholder: "xxxx-xxxx-xxxx-xxxx"%> <br>

<%= f.label :cctype, "Credit Card Company: " %>
<%= f.text_field :cctype %> <br>

<%= f.submit "Update" %>

<% end %>


<h3>Done for good?</h3>
<img src="http://www.jenkelchner.com/wp-content/uploads/2012/05/il_fullxfull.336032579.jpg">

<p><%= link_to "Delete My Account", @user, method: :delete,
                                  data: { confirm: "Are you really going?" } %> </p>
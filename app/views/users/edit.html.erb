<h2>Update Your Account </h2>

<div>
	<%= form_for @user do |f| %>

		<div class="row">
			<div class="col-sm-2">
				<%= f.label :fname, "First Name: " %>
			</div>
			<div class="col-sm-3">
				<%= f.text_field :fname %>
			</div>
			<div class="col-sm-2">
				<%= f.label :lname, "Last Name: " %>
			</div>
			<div class="col-sm-5">
				<%= f.text_field :lname %>
			</div>
		</div>

		<div class="row">
			<div class="col-sm-2">
				<%= f.label :street, "Street Address: " %>
			</div>
			<div class="col-sm-3">
				<%= f.text_field :street %>
			</div>
			<div class="col-sm-2">
				<%= f.label :city, "City: " %>
			</div>
			<div class="col-sm-5">
				<%= f.text_field :city %>
			</div>
		</div>

		<div class="row">
			<div class="col-sm-2">
				<%= f.label :email, "Email: " %>
			</div>
			<div class="col-sm-3">
				<%= f.text_field :email %>
			</div>
			<div class="col-sm-2">
				<%= f.label :password, "Password: " %>
			</div>
			<div class="col-sm-5">
				<%= f.text_field :password %>
			</div>
		</div>

		<div class="row">
			<div class="col-sm-2">
				<%= f.label :cctype, "Credit Card Company: " %>
			</div>
			<div class="col-sm-3">
				<%= f.text_field :cctype %>
			</div>
			<div class="col-sm-2">
				<%= f.label :ccnum, "Credit Card Number: " %>
			</div>
			<div class="col-sm-5">
				<%= f.text_field :ccnum, placeholder: "xxxx-xxxx-xxxx-xxxx"%>
			</div>
		</div>

		<div class="row">
			<div class="col-sm-12 text-left">
				<%= f.submit "Update" %>
			</div>
		</div>
	<% end %>
</div>


<h2>Delete Your Account</h2>
<div class="row">
	<div class="col-sm-5">
		<p><%= link_to "Delete My Account", @user, method: :delete, data: { confirm: "Are you really going?" } %> </p>
	</div>
	<div class="col-sm-7 text-left">
		<img src="http://www.jenkelchner.com/wp-content/uploads/2012/05/il_fullxfull.336032579.jpg" class="img-circle user-delete-img">
	</div>

</div>
